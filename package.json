{
  "name": "claude-code-usage-monitor",
  "displayName": "Claude Code Usage Monitor",
  "description": "Monitor Claude Code API usage in the status bar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Claude Code Usage Monitor",
      "properties": {
        "claudeUsageMonitor.organizationId": {
          "type": "string",
          "default": "",
          "description": "Claude organization ID (from claude.ai URL)"
        },
        "claudeUsageMonitor.pollIntervalSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Polling interval in seconds"
        },
        "claudeUsageMonitor.cookie": {
          "type": "string",
          "default": "",
          "description": "Cookie header value for claude.ai API authentication"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.13.5"
  }
}
